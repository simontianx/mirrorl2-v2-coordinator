{
  "name": "mirrorl2-coordinator",
  "version": "0.1.0",
  "description": "mirrorl2 node coordinator",
  "main": "dist/src/index.js",
  "scripts": {
    "prebuild": "rm -rf dist/* && tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc && cp -f -t dist/ package.json ormconfig.json docker-compose.yml",
    "prestart": "npm run build",
    "start": "ts-node .",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "fmt": "prettier --config .prettierrc.js 'src/**/*.ts' --write",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "protoc": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=. ./src/proto/message.proto",
    "abi": "rsync -av --existing ../mirrorl2-core/build/typechain/ src/lib/abi && npm run fmt"
  },
  "keywords": [],
  "author": "ququzone",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/memoizee": "^0.4.5",
    "@types/node": "^14.11.2",
    "@types/nodemailer": "^6.4.4",
    "gts": "^3.1.0",
    "ts-node": "^9.1.1",
    "ts-proto": "^1.80.0",
    "tsc": "^1.20150623.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@types/redis": "^2.8.28",
    "axios": "^0.21.1",
    "bitcoin-address-validation": "^2.1.0",
    "bitcoinjs-lib": "^5.2.0",
    "body-parser": "^1.19.0",
    "ethers": "^5.0.32",
    "express": "^4.17.1",
    "memoizee": "^0.4.15",
    "mysql": "^2.18.1",
    "nodemailer": "^6.6.2",
    "prom-client": "^13.2.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "tslog": "^3.2.0",
    "typeorm": "^0.2.30",
    "typeorm-static": "^1.1.1",
    "yaml": "^1.10.2"
  }
}
